<h1 class="page-header">Categoria</h1>

<% if @category.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <% @category.errors.full_messages.each do |messages| %>
        <li><%= messages %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-4">

      <%= form_for([:backoffice, @category]) do |f| %>
        <div class="form-group">
          <label>Descrição</label>
          <%= f.text_field :description, class: "form-control", placeholder: "Ex: Animal/Pet" %>
        </div>

        <%= f.submit "Salvar", class: "btn btn-default" %>

      <% end %>

    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->

