<h1 class="page-header">Administrador</h1>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <% @admin.errors.full_messages.each do |messages| %>
        <li>
          <%= messages %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="col-lg-4">

      <%= form_for([:backoffice, @admin]) do |f| %>

        <div class="form-group">
          <%= f.label "Nome" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
        </div>

        <div class="form-group">
          <%= f.label "Email" %>
          <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>

        <% if policy(@admin).edit? %>
        <div class="form-group">
          <%= f.label "Papel" %>
          <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
            <div class="radio">
              <label>
                <%= b.label {b.radio_button + b.text} %>
              </label>
            </div>
          <% end %>
        </div>
        <% end %>


        <div class="form-group">
          <%= f.label "Senha" %>
          <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
        </div>

        <div class="form-group">
          <%= f.label "Confirmar Senha" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmar Senha" %>
        </div>

        <%= f.submit "#{t('labels.save')}", class: "btn btn-default" %>

      <% end %>

    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- /.panel -->